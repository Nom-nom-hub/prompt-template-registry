{
  "name": "prompt-registry-vscode",
  "displayName": "Prompt Registry",
  "description": "VS Code extension for the Prompt Template Registry",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prompt-registry.validatePrompt",
        "title": "Validate Prompt Template"
      },
      {
        "command": "prompt-registry.analyzeQuality",
        "title": "Analyze Prompt Quality"
      }
    ],
    "languages": [
      {
        "id": "prompt-template",
        "aliases": ["Prompt Template", "prompt-template"],
        "extensions": [".prompt.json"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prompt-template",
        "scopeName": "source.prompt-template",
        "path": "./syntaxes/prompt-template.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.36.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}